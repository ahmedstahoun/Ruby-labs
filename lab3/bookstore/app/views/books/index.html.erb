<div class="container d-flex  justify-content-center">
<h1>All Books</h1>
</div>
<div class="d-flex flex-column justify-content-center">
<table class="container table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Price</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.name, book %></td>
        <td><%= book.description %></td>
        <td><%= book.price %></td>
        <td>
          <%= link_to "Show", book_path(book), class: "btn btn-sm btn-primary" %>
          <%= link_to "Edit", edit_book_path(book.id), class: "btn btn-sm btn-secondary" %>
          <%= link_to "Delete", book_path(book.id), data:{turbo_method: :delete, turbo_confirm: "Are you sure?" } , class: "btn btn-sm btn-danger" %>
        
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New book", new_book_path ,class:"btn btn-dark m-auto" %>
</div>